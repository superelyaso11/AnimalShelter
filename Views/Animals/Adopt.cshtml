@model AnimalShelter.Models.AdoptionApplication

@{
    ViewData["Title"] = "Adopt @Model.AnimalName";
}

<div class="container adoption-form">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Adoption Application for @Model.AnimalName</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Adopt" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="AnimalId" />
                        <input type="hidden" asp-for="AnimalName" />
                        
                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label"></label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label"></label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label"></label>
                            <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-paw"></i> Submit Application
                            </button>
                            <a asp-action="Detail" asp-route-id="@Model.AnimalId" 
                               class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Animal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}