@{
    ViewData["Title"] = "Adoption Application Received";
}

<div class="container text-center">
    <div class="alert alert-success" role="alert">
        <h2 class="alert-heading">
            <i class="fas fa-check-circle"></i> Thank You!
        </h2>
        <p>Thank you for applying to adopt @(ViewBag.AnimalName ?? "your new pet")!</p>
        <hr>
        <p class="mb-0">We'll contact you within 3 business days.</p>
    </div>
    
    <a asp-action="Index" class="btn btn-primary">
        <i class="fas fa-arrow-left"></i> Back to Available Animals
    </a>
</div>