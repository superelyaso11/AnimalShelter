@model AnimalShelter.Models.Animal

@{
    ViewData["Title"] = "Add New Animal";
}

<div class="container mt-5">
    <h2>Add New Animal</h2>
    
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div class="form-group mb-2">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        
        <div class="form-group mb-2">
            <label asp-for="Age" class="control-label"></label>
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        
        <div class="form-group mb-2">
            <label asp-for="Breed" class="control-label"></label>
            <input asp-for="Breed" class="form-control" />
            <span asp-validation-for="Breed" class="text-danger"></span>
        </div>
        
        <div class="form-group mb-2">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        
    <div class="form-group mb-2">
        <label asp-for="ImageFile" class="control-label"></label>
        <input asp-for="ImageFile" type="file" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>
        
        <button type="submit" class="btn btn-primary mt-3">
            <i class="fas fa-plus"></i> Add Animal
        </button>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}