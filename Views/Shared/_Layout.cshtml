<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - Animal Shelter</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>

<body>
    <nav class="navbar navbar-light shadow-sm fixed-top navbar-expand-md" style="background-color: #a7e6ff;">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="fa-solid fa-shield-cat"></i> Animal Shelter
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mobile">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="mobile" class="collapse navbar-collapse justify-content-center">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item"><a asp-controller="Home" asp-action="Index" class="nav-link active">Home</a></li>
                    <li class="nav-item"><a asp-controller="Animals" asp-action="Index" class="nav-link">Animals</a></li>
                    <li class="nav-item"><a asp-controller="Donations" asp-action="Index" class="nav-link">Donation</a></li>
                    <li class="nav-item"><a asp-controller="Contact" asp-action="Index" class="nav-link">Contact Us</a></li>
                </ul>
                <form class="d-flex" method="get" asp-controller="Animals" asp-action="Index">
    <input type="text" 
           class="form-control rounded-pill me-2" 
           style="padding: 8px 15px; border: 1px solid #ffd107;"
           placeholder="Search by name..." 
           name="searchString"
           value="@Context.Request.Query["searchString"]">
    <button type="submit" class="btn btn-warning rounded-pill">
        <i class="fas fa-search"></i>
    </button>
</form>
            </div>
        </div>
    </nav>

    <div class="container" style="padding-top: 80px;">
        <main role="main">
            @RenderBody()
        </main>
    </div>

<footer class="footer py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                &copy; 2025 - Animal Shelter - 
                <a asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
            <div class="col-md-6 text-end">
                <a href="https://instagram.com/31yax" target="_blank" class="text-dark me-3">
                    <i class="fab fa-instagram fa-lg"></i>
                </a>
                <a href="https://twitter.com/elyas_ez" target="_blank" class="text-dark">
                    <i class="fab fa-twitter fa-lg"></i>
                </a>
            </div>
        </div>
    </div>
</footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/57f55c0524.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>